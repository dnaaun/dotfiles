# WHen using paracols
snippet brc
alias begin right column
	\\begin{rightcolumn*}
	${0:}
	\\end{rightcolumn*}
	${1}

snippet blc
alias begin left column
	\\begin{leftcolumn}
	${0:}
	\\end{leftcolumn}
	${1}

snippet src
alias split right column
	\\end{rightcolumn*}
	\\begin{leftcolumn}
	${0:}
	\\end{leftcolumn}
	\\begin{rightcolumn*}
	${1}

snippet slc
alias split left column
	\\end{leftcolumn}
	\\begin{rightcolumn*}
	${0:}
	\\end{rightcolumn*}
	\\begin{leftcolumn}
	${1}

# Take notes in right column. I could use
# slc and then bl, but I do this frequently enough to justify it's own snippet.
snippet tn
alias take notes (in right column)
	\\end{leftcolumn}
	\\begin{rightcolumn*}
	\\small
	\\begin{itemize}
	\\item ${0:}
	\\end{itemize}
	\\end{rightcolumn*}
	\\begin{leftcolumn}
	${1}


