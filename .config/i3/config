# Start some applications in the "communications" workspace
for_window [class="slack"] move container to workspace "10: comm"

client.focused #4E9C00 #4E9C00 #FFFFFF #FFFFFF
client.focused_inactive #1B3600 #1B3600 #888888 #FFFFFF
client.unfocused #333333 #333333 #888888 #FFFFFF
client.urgent #C20000 #C20000 #FFFFFF #FFFFFF


# Lock the screen with xscreensasver
bindsym $mod+t exec xscreensaver-command -l

# Media player controls
# The (ubuntu/debian installed binary version of) Cmus player doesn't support
# MPRIS, despite claiming otherwise in it's man page, so we gotta 
# accomodate.
bindsym XF86AudioPlay exec playerctl play; exec cmus-remote -C player-play
bindsym XF86AudioPause exec playerctl pause; exec cmus-remote -C player-pause-playback
bindsym XF86AudioNext exec playerctl next; exec cmus-remote -C player-next
bindsym XF86AudioPrev exec playerctl previous; exec cmus-remote -C player-prev


# Control media (MPRIS, and Cmus)
bindsym Control+$alt+l exec playerctl next; exec cmus-remote -C player-next
bindsym Control+$alt+h exec playerctl previous; exec cmus-remote -C player-prev
bindsym Control+$alt+j exec playerctl play-pause; exec cmus-remote -C player-pause

# The pkill business below is to update i3blocks.
# the [volume] section in .config/i3blocks/config specifies that this signal
# will update the volume indicator.
# Volume
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume "$(pacmd info | grep Default\ sink | sed 's/^[^:]*: //')" +5% && pkill -SIGRTMIN+10 i3blocks 
bindsym XF86AudioLowerVolume exec pactl set-sink-volume "$(pacmd info | grep Default\ sink | sed 's/^[^:]*: //')" -5% && pkill -SIGRTMIN+10 i3blocks 
bindsym XF86AudioMute exec pactl set-sink-mute 0 toggle && pkill -SIGRTMIN+10 i3blocks

# Media player controls
# TODO: Accomodate Cmus here as well. Alternatively, submit a bug report
# to (the debian package of) Cmus for not obeying MPRIS.
bindsym Control+$alt+z exec playerctl play-pause
bindsym $alt+Left exec playerctl position 2-
bindsym $alt+Right exec playerctl position 2+
bindsym Control+Left exec playerctl position 10-
bindsym Control+Right exec playerctl position 10+
bindsym $alt+Shift+Left exec playerctl position 60-
bindsym $alt+Shift+Right exec playerctl position 60+



